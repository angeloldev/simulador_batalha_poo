# Medieval Fantasy Battle Simulator - Environment Variables
# Copie este arquivo para .env e configure as variáveis

# Chave secreta para sessões Flask (OBRIGATÓRIO em produção)
SECRET_KEY=sua-chave-secreta-super-segura-aqui-mude-em-producao

# Ambiente de execução
FLASK_ENV=development
FLASK_DEBUG=True

# Configurações do banco de dados
DATABASE_URL=sqlite:///battle_simulator.db

# Configurações de sessão
SESSION_COOKIE_SECURE=False  # True em produção com HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Configurações do servidor
HOST=127.0.0.1
PORT=5000

# Configurações de WebSocket
SOCKETIO_CORS_ALLOWED_ORIGINS=*

# Configurações de segurança
BCRYPT_LOG_ROUNDS=12

# Configurações de logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Configurações de email (para futuras funcionalidades)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=seu-email@gmail.com
MAIL_PASSWORD=sua-senha-de-app

# Configurações Redis (para sessões distribuídas em produção)
REDIS_URL=redis://localhost:6379/0

# Configurações de rate limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379/1